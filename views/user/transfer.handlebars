<script src="/userTransfer.js"></script>
<div id="transferForm">
    <h2 class="header">transfer money</h1>
    <form>
        <label for="selectSendingAccount">From</label><br>
        <select name="sendingAccountNum" id="selectSendingAccount" required>
            <option selected disabled hidden>Please select an account</option>
            {{#each userAccounts}}
                <option value="{{this.account_number}}">{{this.account_type}} ({{this.account_number}}) - ${{this.balance}}</option>
            {{/each}}
        </select><br><br>

        <label for="selectReceivingAccount">To</label><br>
        <input name="receivingAccountNum" type="number" id="selectReceivingAccount" placeholder="911137" required><br><br>

        <label for="setAmount">Amount</label><br>
        <input name="amount" type="number" id="setAmount" placeholder="50" required><br><br>

        <button type="submit">Transfer</button>
    </form>
</div>